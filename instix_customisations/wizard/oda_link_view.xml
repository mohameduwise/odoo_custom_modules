<odoo>
    <record id="view_applicant_oad_link_wizard_form" model="ir.ui.view">
        <field name="name">hr.applicant.oad.wizard.form</field>
        <field name="model">hr.applicant.oad.wizard</field>
        <field name="arch" type="xml">
            <form string="Send Link">
                <group>
                    <field name="applicant_id" readonly="1"/>
                    <field name="link" placeholder="https://..."/>
                </group>
                <footer>
                    <button name="action_send_link"
                            string="Send"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>