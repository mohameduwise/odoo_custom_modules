<odoo>
    <data>
        <record model="ir.ui.view" id="view_hr_job_inherit">
            <field name="name">hr.job.inherit</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr.view_hr_job_form"/>
            <field name="arch" type="xml">

                <!-- Add a new page in the notebook for Screening Configuration -->
                <xpath expr="//page[@name='recruitment_page']" position="after">
                    <page string="Screening Configuration" name="screening_config_page">
                        <group>
                            <group string="Pass Criteria Settings">
                                <field name="analytical_logical_survey_pass_criteria_enabled"
                                       widget="boolean_toggle"
                                       string="Enable Passing Score Criteria"/>
                            </group>
                        </group>

                        <group string="Skills Assessment">
                            <group string="Analytical Skills">
                                <field name="analytical_skills_screening_survey_id"/>
                                <field name="analytical_survey_passing_score"
                                       string="Passing Score (%)"
                                       invisible="not analytical_logical_survey_pass_criteria_enabled"/>
                            </group>

                            <group string="Logical Skills">
                                <field name="logical_skills_screening_survey_id"/>
                                <field name="logical_survey_passing_score"
                                       string="Passing Score (%)"
                                       invisible="not analytical_logical_survey_pass_criteria_enabled"/>
                            </group>
                        </group>

                        <group string="Additional Assessments">
                            <group>
                                <field name="three_minute_video_survey_id"
                                       string="3-Minute Video Survey"/>
                                <field name="gems_stone_screening_id"
                                       string="Gems Stone Screening"/>
                            </group>
                        </group>
                    </page>
                </xpath>

            </field>
        </record>

        <record id="hr_job_form_resume_requirements" model="ir.ui.view">
            <field name="name">hr.job.form.resume.requirements</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr.view_hr_job_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='recruitment_page']" position="after">
                    <page string="Resume Requirements"
                          name="resume_requirements_page"
                          groups="hr_recruitment.group_hr_recruitment_user,hr.group_hr_user">

                        <group string="Experience Requirements" col="2">
                            <field name="resume_min_experience"/>
                            <field name="resume_max_experience"/>
                        </group>
                        <group>
                            <field name="resume_skill_ids" widget="many2many_tags"
                                   placeholder="Required resume skills"/>

                            <field name="resume_keyword_ids" widget="many2many_tags"
                                   placeholder="Resume keywords"/>
                        </group>

                        <group string="Screening Rules" col="2">
                            <field name="resume_pass_score"/>
                        </group>

                        <group string="Notes">
                            <field name="resume_notes" placeholder="Explain what kind of resume is preferredâ€¦"/>
                        </group>

                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
