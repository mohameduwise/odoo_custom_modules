<record id="mail_template_oad_link" model="mail.template">
        <field name="name">Applicant Link Mail</field>
        <field name="model_id" ref="hr_recruitment.model_hr_applicant"/>
        <field name="subject">OAD Test Link</field>
        <field name="email_from">{{object.user_id.partner_id.email}}</field>
        <field name="email_to">{{object.email_from}}</field>
        <field name="body_html" type="html">
            <p>Dear <t t-out="object.partner_name"/>,</p>
            <p>Please use the following link for OAD Test:</p>

            <p>
                OAD Link:-<a t-att-href="ctx.get('link')" target="_blank">
                   <t t-out="ctx.get('link')"/>
                </a>
            </p>

             <p>Regards,<br/>HR Team</p>
        </field>
    </record>

