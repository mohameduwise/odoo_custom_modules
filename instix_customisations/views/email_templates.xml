        <field name="use_default_to" eval="True"/>
         <field name="body_html" type="html">
            <p>Dear <t t-out="object.partner_id.name"/>,</p>

            <!-- <p>Your <strong>Logical Test Score</strong>: {{ object.logical_score }}%</p> -->

